{
  "name": "dhedge-ovm",
  "version": "1.0.0",
  "description": "dHEDGE ovm smart contracts",
  "main": "hardhat-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "prettier:sol": "prettier --write \"contracts/**/*.sol\"",
    "fork:evm": "hardhat node --fork https://mainnet.infura.io/v3/$(grep INFURA_KEY .env | cut -d '=' -f2)",
    "fork:polygon": "hardhat node --fork https://rpc-mainnet.maticvigil.com/",
    "test:unit": "hardhat test test/unit/* --network hardhat",
    "test:inte:evm": "hardhat test test/integration/evm/*.js --network localhost",
    "test:inte:polygon": "hardhat test test/integration/polygon/*.js --network localhost",
    "coverage": "node --max-old-space-size=4096 ./node_modules/.bin/hardhat coverage --network hardhat",
    "deploy": "node scripts/DHedge.deploy.js"
  },
  "author": "dHEDGE Team",
  "license": "ISC",
  "devDependencies": {
    "@gnosis.pm/mock-contract": "^4.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "chai": "^4.3.4",
    "chai-almost": "^1.0.1",
    "cross-env": "^7.0.3",
    "ethereum-waffle": "^3.3.0",
    "hardhat": "^2.1.1",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.9",
    "semantic-release": "^17.4.2",
    "solhint": "^3.3.4",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1"
  },
  "dependencies": {
    "@chainlink/contracts": "0.1.6",
    "@eth-optimism/plugins": "0.0.20",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "dotenv": "^8.2.0"
  }
}
